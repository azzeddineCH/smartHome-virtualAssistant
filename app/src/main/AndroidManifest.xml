<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.cerist.summer.virtualassistant">

    <uses-permissionsCheck android:name="android.permissionsCheck.BLUETOOTH"/>
    <uses-permissionsCheck android:name="android.permissionsCheck.BLUETOOTH_ADMIN"/>
    <uses-permissionsCheck android:name="android.permissionsCheck.ACCESS_FINE_LOCATION"/>
    <uses-permissionsCheck android:name="android.permissionsCheck.ACCESS_COARSE_LOCATION"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Views.Activities.HomeActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>
